<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.dtag.tlabs.wallet.tests.wallet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WalletTestWalletActivity"
			android:screenOrientation="portrait"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.RUN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
			<intent-filter>
				<action android:name="de.dtag.tlabs.wallet.tests.wallet.Wallet.GetToken" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
        </activity>
        <service android:exported="true" android:name="WalletTestWalletService">
			<intent-filter>
				<action android:name="de.dtag.tlabs.wallet.tests.wallet.WalletService.Start" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
        </service>
    </application>

</manifest>